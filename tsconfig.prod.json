{
  "compilerOptions": {
    "lib": ["ES2021"],
    "target": "es2021",
    "module": "commonjs",
    "strict": true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false
  },
  "exclude": ["node_modules"],
  "include": ["src", "public"]
}
